# Environment Variables for Email Service
# Copy this file to .env.local and fill in your actual API keys

# ============================================
# EMAIL SERVICE CONFIGURATION
# ============================================

# Choose your email service: 'sendgrid', 'gmail', or 'simulation'
VITE_EMAIL_SERVICE=simulation

# ============================================
# ADMIN CONFIGURATION
# ============================================
# Admin email for receiving order notifications
VITE_ADMIN_EMAIL=admin@bookstore.com

# ============================================
# SENDGRID CONFIGURATION
# ============================================
# Get your API key from: https://app.sendgrid.com/settings/api_keys
VITE_SENDGRID_API_KEY=your_sendgrid_api_key_here
VITE_SENDGRID_FROM_EMAIL=noreply@bookstore.com
VITE_SENDGRID_FROM_NAME=Bookish Bliss

# ============================================
# GMAIL SMTP CONFIGURATION
# ============================================
# For Gmail, you need to use an App Password (not your regular password)
# Get App Password: https://myaccount.google.com/apppasswords
VITE_GMAIL_USER=your_email@gmail.com
VITE_GMAIL_APP_PASSWORD=your_gmail_app_password_here
VITE_GMAIL_FROM_NAME=Bookish Bliss

# ============================================
# GENERAL EMAIL SETTINGS
# ============================================
VITE_EMAIL_ENABLED=true
VITE_EMAIL_DEBUG=true
